function performace_test(){
	hyperfine --runs 10 'zsh -i -c exit'
}

function convert_to_hevc() {
  input_filename=$1
  
  if [[ -z "$input_filename" ]]; then
    echo "Usage: convert_to_hevc <input_filename>"
    return 1
  fi

  # if [[ ! -f "$input_filename" ]]; then
  #   echo "Error: File '$input_filename' not found."
  #   return 1
  # fi

  output_filename="hevc_${input_filename}"
  ffmpeg -i $input_filename -c:v hevc_videotoolbox -crf 28 $output_filename
  
  echo "Output generated: $output_filename"
}

function cycle(){
	win=$(yabai -m query --windows --window last | jq '.id')

	while : ; do
    	yabai -m window $win --swap prev &> /dev/null
    	if [[ $? -eq 1 ]]; then
        	break
    	fi
	done
}

function f() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		builtin cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

gw() {
    if ! git rev-parse --is-inside-work-tree >/dev/null 2>&1; then
        echo "Error: Not inside a git repository." >&2
        return 1
    fi

    if [ -z "$1" ]; then
        echo "Usage: gw <worktree-branch-name>"
        echo "Type 'gw [TAB]' for a list of worktrees." >&2
        return 1
    fi

    local target_branch="[$1]"
    local target_dir

    target_dir=$(git worktree list | awk -v branch="$target_branch" '$NF == branch {print $1}')

    if [ -z "$target_dir" ]; then
        echo "Error: Worktree for branch '$1' not found." >&2
        echo "Available worktrees:"
        git worktree list >&2
        return 1
    fi

    echo "Jumping to $target_dir"
    cd "$target_dir"
}

_gw() {
    local -a branches
    
    if ! git rev-parse --is-inside-work-tree >/dev/null 2>&1; then
        return 1
    fi
    
    branches=($(git worktree list | awk '{gsub(/[\[\]]/, "", $NF); print $NF}'))
    
    _describe 'worktree branches' branches
}

compdef _gw gw
